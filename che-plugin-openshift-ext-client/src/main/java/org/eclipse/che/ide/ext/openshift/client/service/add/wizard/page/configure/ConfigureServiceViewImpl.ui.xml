<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="org.eclipse.che.ide.ext.openshift.client.OpenshiftResources"/>
    <ui:with field='locale' type='org.eclipse.che.ide.ext.openshift.client.OpenshiftLocalizationConstant'/>

    <g:DockLayoutPanel width="700px" height="450px" addStyleNames="{resources.css.marginH}">
        <g:north size="24">
            <g:Label styleName="{resources.css.sectionTitle}" text="{locale.configureService}"/>
        </g:north>
        <g:center>
            <g:DockLayoutPanel>
                <g:north size="24">
                    <g:FlowPanel width="100%">
                        <g:Label text="{locale.configureServiceEnvironmentVariablesTableTitle}" addStyleNames="{resources.css.floatLeft}"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:ScrollPanel>
                        <g:FlowPanel ui:field="envVariablesPanel"/>
                    </g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:south size="200">
            <g:DockLayoutPanel>
                <g:north size="24">
                    <g:FlowPanel>
                        <g:Label text="{locale.configureServiceEnvironmentLabelsTableTitle}" addStyleNames="{resources.css.floatLeft}"/>
                        <g:Button text="+" addStyleNames="{resources.css.smallButton} {resources.css.floatRight}"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:ScrollPanel>
                        <g:FlowPanel ui:field="labelsPanel"/>
                    </g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>
    